{% block sw_product_image_preview %}
	{% parent %}

	<sw-label v-if="isHoverCover" class="sw-product-image__cover-label" variant="success" size="medium" appearance="pill">
		{{ $tc('sw-product.mediaForm.hoverCoverSubline') }}
	</sw-label>
{% endblock %}

{% block sw_product_image_context %}
	{% block sw_product_image_context_cover_action %}
		<sw-context-menu-item v-if="!isCover" @click="$emit('sw-product-image-cover')">{{ $tc('global.sw-product-image.context.buttonAsCover') }}</sw-context-menu-item>
	{% endblock %}

	{% block sw_product_image_context_hover_cover_action %}
		<sw-context-menu-item v-if="!isCover && !isHoverCover" @click="$emit('sw-product-image-hover-cover')">
			{{ $tc('global.sw-product-image.context.buttonAsHoverCover') }}
		</sw-context-menu-item>
	{% endblock %}

	{% block sw_product_image_context_delete_action %}
		<sw-context-menu-item variant="danger" @click="$emit('sw-product-image-delete')">{{ $tc('global.sw-product-image.context.buttonRemove') }}</sw-context-menu-item>
	{% endblock %}
{% endblock %}
